
<% include layout/header%>
	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">			
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="#"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
				<li class="active">Quản lý danh mục</li>
			</ol>
		</div><!--/.row-->
		
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Quản lý danh mục</h1>
			</div>
		</div><!--/.row-->
		<div id="toolbar" class="btn-group">
            <a href="/admin/category/add" class="btn btn-success">
                <i class="glyphicon glyphicon-plus"></i> Thêm danh mục
            </a>
        </div>
		<div class="row">
			<div class="col-md-12">
					<div class="panel panel-default">
							<div class="panel-body">
								<table 
									data-toolbar="#toolbar"
									data-toggle="table">
		
									<thead>
									<tr>
										<th data-field="id" data-sortable="true">ID</th>
										<th>Tên danh mục</th>
										<th>Hành động</th>
									</tr>
									</thead>
									<tbody>
											<%for(key in data.categorys){%>
										<tr>
											<td style=""><%=data.categorys[key].cat_id%></td>
											<td style=""><%=data.categorys[key].cat_name%></td>
											<td class="form-group">
												<a href="/admin/category/edit/<%=data.categorys[key].cat_id%>" class="btn btn-primary"><i class="glyphicon glyphicon-pencil"></i></a>
												<a href="/admin/category/del/<%=data.categorys[key].cat_id%>" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
											</td>
										</tr>
										<%}%>
									</tbody>
								</table>
							</div>
							<div class="panel-footer">
								<nav aria-label="Page navigation example">
									<ul class="pagination">
										<li class="page-item"><a class="page-link" href="/admin/category/list?page=<%=data.page_prev%>">&laquo;</a></li>
										<%for(i=1; i<=data.total_pages; i++){%>
										<li class="page-item"><a class="page-link" href="/admin/category/list?page=<%=i%>"><%=i%></a></li>
										<%}%>
										<li class="page-item"><a class="page-link" href="/admin/category/list?page=<%=data.page_next%>">&raquo;</a></li>
									</ul>
								</nav>
							</div>
						</div>
			</div>
		</div><!--/.row-->
	</div>	<!--/.main-->

	<script src="/static/theme/admin/js/jquery-1.11.1.min.js"></script>
	<script src="/static/theme/admin/js/bootstrap.min.js"></script>
	<script src="/static/theme/admin/js/bootstrap-table.js"></script>	
	<% include layout/header%>
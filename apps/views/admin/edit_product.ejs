<% include layout/header%>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">			
	<div class="row">
		<ol class="breadcrumb">
			<li><a href="#"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
			<li><a href="">Quản lý sản phẩm</a></li>
			<li class="active"><%=data.product[0].prd_name%></li>
		</ol>
	</div><!--/.row-->
	
	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">Sản phẩm: <%=data.product[0].prd_name%></h1>
		</div>
	</div><!--/.row-->
	<div class="row">
			<div class="col-lg-12">
				<div class="panel panel-default">
					<div class="panel-body">
						<div class="col-md-6">
							<form role="form" method="post" enctype="multipart/form-data">
							<div class="form-group">
								<label>Tên sản phẩm</label>
								<input type="text" name="prd_name" required class="form-control" value="<%=data.product[0].prd_name%>"  placeholder="">
							</div>
															
							<div class="form-group">
								<label>Giá sản phẩm</label>
								<input type="number" name="prd_price" required value=<%=data.product[0].prd_price%> class="form-control">
							</div>
							<div class="form-group">
								<label>Bảo hành</label>
								<input type="text" name="prd_warranty" required value="<%=data.product[0].prd_warranty%>" class="form-control">
							</div>    
							<div class="form-group">
								<label>Phụ kiện</label>
								<input type="text" name="prd_accessories" required value="<%=data.product[0].prd_accessories%>" class="form-control">
							</div>                  
							<div class="form-group">
								<label>Khuyến mãi</label>
								<input type="text" name="prd_promotion" required value="<%=data.product[0].prd_promotion%>" class="form-control">
							</div>  
							<div class="form-group">
								<label>Tình trạng</label>
								<input type="text" name="prd_new" required value="<%=data.product[0].prd_new%>" type="text" class="form-control">
							</div>  
							
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label>Ảnh sản phẩm</label>
								<input type="file" name="prd_image">
								<input type="hidden" name="prd_image_hidden" value="<%=data.product[0].prd_image%>">
								<br>
								<div>
									<img src="img/download.jpeg">
								</div>
							</div>
							<div class="form-group">
								<label>Danh mục</label>
								<select name="cat_id" class="form-control">
									<%for(key in data.categories){%>
									<option <%if(data.categories[key].cat_id==data.product[0].cat_id){%>selected<%}%> value=<%=data.categories[key].cat_id%>><%=data.categories[key].cat_name%></option>
									<%}%>
								</select>
							</div>
							
							<div class="form-group">
								<label>Trạng thái</label>
								<select name="prd_status" class="form-control">
									<option value=1 <%if(data.product[0].prd_status==1){%>selected<%}%>>Còn hàng</option>
									<option value=0 <%if(data.product[0].prd_status==0){%>selected<%}%>>Hết hàng</option>
								</select>
							</div>
							
							<div class="form-group">
								<label>Sản phẩm nổi bật</label>
								<div class="checkbox">
									<label>
										<input <%if(data.product[0].prd_featured==1){%>checked<%}%> name="prd_featured" type="checkbox" value=1>Nổi bật
									</label>
								</div>
							</div>
							<div class="form-group">
									<label>Mô tả sản phẩm</label>
									<textarea name="prd_details" required class="form-control" rows="3"><%=data.product[0].prd_details%></textarea>
								</div>
							<button type="submit" name="sbm" class="btn btn-primary">Cập nhật</button>
							<button type="reset" class="btn btn-default">Làm mới</button>
						</div>
					</form>
					</div>
				</div>
			</div><!-- /.col-->
		</div><!-- /.row -->
	
</div>	<!--/.main-->	

<% include layout/footer%>